{
  "packagePresets": [
    {
      "name": "base-pack",
      "generators": [
        "ZIP"
      ],
      "output": {
        "verbose": true
      }
    },
    {
      "name": "vs-pack",
      "configurePreset": "vs-base",
      "inherits": "base-pack",
      "generators": [
        "7Z",
        "NSIS",
        "WIX"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "vs-nost-pack",
      "configurePreset": "vs-nost-base",
      "inherits": "vs-pack"
    },
    {
      "name": "vs64-pack",
      "configurePreset": "vs64-base",
      "inherits": "vs-pack"
    },
    {
      "name": "vs64-nost-pack",
      "configurePreset": "vs64-nost-base",
      "inherits": "vs-nost-pack"
    }
  ]
}